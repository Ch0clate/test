status = trace
name = PropertiesConfig

property.filename = /home/BookingEngineLogs/Execution.log

filters = threshold

filter.threshold.type = ThresholdFilter
filter.threshold.level = debug

appenders = rolling

appender.rolling.type = RollingFile
appender.rolling.name = RollingFile
appender.rolling.fileName = ${filename}
appender.rolling.filePattern = D:\\debug-backup-%d{MM-dd-yy-HH-mm-ss}-%i.log.gz
appender.rolling.layout.type = PatternLayout
appender.rolling.layout.pattern = %d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %c{1}:%L - %m%n
appender.rolling.policies.type = Policies

#Define a TimeBasedTriggeringPolicy if needed
#appender.rolling.policies.time.type = TimeBasedTriggeringPolicy
#appender.rolling.policies.time.interval = 86400000
#appender.rolling.policies.time.modulate = true

appender.rolling.policies.size.type = SizeBasedTriggeringPolicy
appender.rolling.policies.size.size=1024MB
appender.rolling.strategy.type = DefaultRolloverStrategy
appender.rolling.strategy.max = 20

loggers = rolling

logger.rolling.name = com.coxandkings.travel.bookingengine
logger.rolling.level = trace
logger.rolling.additivity = false
logger.rolling.appenderRef.rolling.ref = RollingFile

#Add a delete and rotation of the file as needed
# Rotate log file each day
#appender.rolling.strategy.delete.type = Delete
#appender.rolling.strategy.delete.basePath = ${filename}
#appender.rolling.strategy.delete.maxDepth = 1
#appender.rolling.strategy.delete.ifLastModified.type = IfLastModified
# Delete files older than 30 days
#appender.rolling.strategy.delete.ifLastModified.age = 30d